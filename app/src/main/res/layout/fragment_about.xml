<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.furkantazegullu.weather.ui.FragmentAbout">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:src="@drawable/main_icon"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageview_about_logo"
        android:layout_height="200dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageview_about_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/textview_about_appname"
        android:textColor="#000000"
        android:text="FuWeather v1.0" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textview_about_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:id="@+id/textview_about_namedate"
        android:text="Copyright (c) 2016 Furkan Tazegüllü" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/textview_about_namedate"
        android:layout_centerHorizontal="true"
        android:text="All Right Reserved"
        android:id="@+id/textview_about_rights"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_below="@+id/textview_about_rights"
        android:text="furkan.tazegll@gmail.com"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />



</RelativeLayout>
